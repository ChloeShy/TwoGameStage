<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grass_bg"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/exeggcute"
        android:layout_width="208dp"
        android:layout_height="202dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:tint="#65FF9D00"
        app:srcCompat="@drawable/exeggcute"
        tools:ignore="UseAppTint"
        />

    <ImageView
        android:id="@+id/eggBasket"
        android:layout_width="179dp"
        android:layout_height="186dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="257dp"
        android:layout_marginEnd="25dp"
        android:visibility="visible"
        app:srcCompat="@drawable/basketegg" />

    <ImageView
        android:id="@+id/threeEggs"
        android:layout_width="144dp"
        android:layout_height="147dp"
        android:layout_alignStart="@+id/exeggcute"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="256dp"
        android:rotation="-6"
        android:rotationY="4"
        android:tintMode="multiply"
        android:visibility="visible"
        app:srcCompat="@drawable/egg2"
        app:tint="#EFE3E3" />

    <ImageView
        android:id="@+id/anEgg"
        android:layout_width="66dp"
        android:layout_height="82dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="303dp"
        android:layout_marginEnd="192dp"
        android:rotation="8"
        android:tintMode="multiply"
        android:visibility="visible"
        app:srcCompat="@drawable/egg1"
        app:tint="#EFCEC0" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="119dp"
        android:layout_height="135dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="372dp"
        android:layout_marginEnd="178dp"
        android:visibility="visible"
        app:srcCompat="@drawable/brokenegg" />

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="@string/question"
        android:textFontWeight="@integer/material_motion_duration_long_2"
        android:textSize="22sp"
        android:padding="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="148dp"
        android:layout_marginBottom="169dp"
        android:background="@drawable/button_background"
        android:text="@string/confirm"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/deduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="260dp"
        android:text="-1"
        android:background="@drawable/button_background"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/increase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="260dp"
        android:text="+1"
        android:background="@drawable/button_background"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/redCross"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@id/number"
        android:layout_centerHorizontal="true"
        android:src="@drawable/red_cross"
        android:visibility="invisible"
        android:contentDescription="Red cross mark" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="270dp"
        android:textSize="22sp"
        android:text="0" />

    <ImageButton
        android:id="@+id/btnMusicToggle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_volume_on"
        android:background="@null"/>

    <Button
        android:id="@+id/btnNextLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Next Level"
        android:visibility="invisible"
        android:background="@drawable/button_background"
        android:textColor="@color/white"/>


</RelativeLayout>